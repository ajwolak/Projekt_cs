<addNewItem:OneViewBase x:Class="MVVMFirma.Views.addNewItemView.NowaHistoriaChoroby"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:addNewItem="clr-namespace:MVVMFirma.Views.addNewItemView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions >
            <RowDefinition Height="50" />
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Content="Pacjent" Margin="0,8,0,8"></Label>
        <ComboBox  Grid.Row="0" Grid.Column="1" Margin="0,8,0,8"  ItemsSource="{Binding ComboboxPacjent}" DisplayMemberPath="value" SelectedValuePath="key" SelectedValue="{Binding Path=PacjentID, Mode=TwoWay}"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Choroba" Margin="0,8,0,8"></Label>
        <ComboBox Grid.Row="1" Grid.Column="1" Margin="0,8,0,8" ItemsSource="{Binding ComboboxChoroby}" DisplayMemberPath="value" SelectedValuePath="key" SelectedValue="{Binding Path=ChorobaID, Mode=TwoWay}"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Data diagnozy" Margin="0,8,0,8"></Label>
        <DatePicker Grid.Row="2" Grid.Column="1" Margin="0,8,0,8" SelectedDate="{Binding Path=DataDiagnozy, UpdateSourceTrigger=PropertyChanged}" 
                    DisplayDateStart="1900-01-01" 
                    DisplayDateEnd="2100-12-31" />

        <Label Grid.Row="3" Grid.Column="0" Content="Data wyleczenia" Margin="0,8,0,8"></Label>
        <DatePicker Grid.Row="3" Grid.Column="1" Margin="0,8,0,8" SelectedDate="{Binding Path=DataWyleczenia, UpdateSourceTrigger=PropertyChanged}" 
                    DisplayDateStart="1900-01-01" 
                    DisplayDateEnd="2100-12-31" />
    </Grid>
</addNewItem:OneViewBase>

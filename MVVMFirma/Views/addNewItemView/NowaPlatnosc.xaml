<addNewItem:OneViewBase x:Class="MVVMFirma.Views.addNewItemView.NowaPlatnosc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:addNewItem="clr-namespace:MVVMFirma.Views.addNewItemView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions >
            <RowDefinition Height="50" />
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Content="Wizyta" Margin="0,8,0,8"></Label>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="0,8,0,8" IsEnabled="False" Text="{Binding WizytaDane}"  />
        <Button Content="..."  Grid.Row="0" Grid.Column="2" Margin="0,8,0,8" Command="{Binding ShowWizytaDane}"/>
        
        <Label Grid.Row="1" Grid.Column="0" Content="Kwota" Margin="0,8,0,8"></Label>
        <TextBox  Grid.Row="1" Grid.Column="1" Margin="0,8,0,8" Text="{Binding Path=Kwota, UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Row="2" Grid.Column="0" Content="Data płatności" Margin="0,8,0,8"></Label>
        <DatePicker Grid.Row="2" Grid.Column="1" Margin="0,8,0,8" SelectedDate="{Binding Path=DataPlatnosci, UpdateSourceTrigger=PropertyChanged}" 
                DisplayDateStart="1900-01-01" 
                DisplayDateEnd="2100-12-31" />

        <Label Grid.Row="3" Grid.Column="0" Content="Metoda płatności" Margin="0,8,0,8"></Label>
        <TextBox  Grid.Row="3" Grid.Column="1" Margin="0,8,0,8" Text="{Binding Path=MetodaPlatnosci, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</addNewItem:OneViewBase>
